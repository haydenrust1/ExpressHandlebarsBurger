<h1>EAT ALL THE BURGERS!!!</h1>
<img src="/assets/img/burger.jpg" alt="juicy burger with many toppings">
<div class='container-fluid'>
    <div class='row'>
        <div class='col-6'>
            <h2>BURGERS NEEDING DEVOURING</h2>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burger/burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class='col-6'>
            <h2>DEVOURED BURGERS</h2>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li>
                    {{burger_name}}
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>


<h2>What Burger Does Your Heart Desire?</h2>
<form class="create-form">

    <div class="form-group">
        <label for="burg">Burger Name:</label>
        <input type="text" id="burg" name="name">
    </div>

    <button type="submit">Add Burger</button>
</form>